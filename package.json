{
  "name": "@mverissimoo/emotion-grid",
  "version": "1.0.0",
  "main": "dist/emotion-grid.cjs.js",
  "module": "dist/emotion-grid.esm.js",
  "repository": "git@github.com:mverissimo/emotion-grid.git",
  "author": "Matheus Verissimo <mverissimoo@hotmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/"
  ],
  "sideEffects": false,
  "scripts": {
    "commit": "git-cz",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:serve": "docz build && docz serve",
    "lint": "eslint src/* --ext .ts,.tsx --no-error-on-unmatched-pattern",
    "lint:ci": "yarn lint --format junit -o reports/eslint/results.json",
    "lint:fix": "yarn lint --fix",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage -u --runInBand --json --outputFile=reports/jest/results.json",
    "build": "preconstruct build",
    "prepublishOnly": "yarn build",
    "release": "semantic-release"
  },
  "preconstruct": {
    "globals": {
      "react": "React",
      "react-dom": "ReactDOM",
      "@emotion/styled": "styled",
      "@emotion/core": "core"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged ",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn lint:fix"
    ],
    "**/**/**/*.+(js|json|jsx|ts|tsx|mdx|md)": [
      "pretty-quick --staged"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "7.11.0",
    "@babel/preset-typescript": "7.10.4",
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "@preconstruct/cli": "1.1.17",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/github": "7.0.7",
    "@semantic-release/npm": "7.0.5",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@testing-library/jest-dom": "5.11.2",
    "@testing-library/react": "10.2.1",
    "@types/css-mediaquery": "0.1.0",
    "@types/jest": "26.0.0",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.2.2",
    "css-mediaquery": "0.1.2",
    "cz-conventional-changelog": "3.2.0",
    "docz": "2.3.1",
    "eslint": "7.6.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-plugin-flowtype": "5.1.3",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-react-hooks": "4.0.8",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-testing-library": "3.4.0",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "jest-emotion": "10.0.32",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "semantic-release": "17.0.8",
    "stylelint": "13.6.1",
    "ts-jest": "26.1.4",
    "typescript": "3.9.7"
  },
  "peerDependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@emotion/styled-base": "^10.0.31",
    "emotion-theming": "^10.0.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "dependencies": {}
}
